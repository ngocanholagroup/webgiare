<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <system.webServer>
        <defaultDocument>
            <files>
                <clear />
                <add value="index.php" />
                <add value="Default.htm" />
                <add value="index.html" />
            </files>
        </defaultDocument>
        <rewrite>
            <rules>
                <!-- Rule 1: Chuyển hướng nếu người dùng gõ có đuôi .php -> bỏ đuôi .php (Optional - SEO) -->
                <!-- <rule name="Redirect .php extension" stopProcessing="false">
                    <match url="^(.*).php$" ignoreCase="true" />
                    <conditions logicalGrouping="MatchAny">
                        <add input="{URL}" pattern="(.*).php$" ignoreCase="false" />
                    </conditions>
                    <action type="Redirect" url="{R:1}" redirectType="Permanent" />
                </rule> -->

                <!-- Rule 2: Rewrite (Viết lại) URL không có đuôi .php thành có đuôi .php để xử lý -->
                <rule name="Rewrite PHP" stopProcessing="true">
                    <match url="(.*)" />
                    <conditions>
                        <!-- Không áp dụng nếu là file thật -->
                        <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
                        <!-- Không áp dụng nếu là thư mục thật -->
                        <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
                        <!-- Kiểm tra xem nếu thêm .php vào có tồn tại file không -->
                        <add input="{REQUEST_FILENAME}.php" matchType="IsFile" />
                    </conditions>
                    <action type="Rewrite" url="{R:1}.php" />
                </rule>
            </rules>
        </rewrite>
    </system.webServer>
</configuration>